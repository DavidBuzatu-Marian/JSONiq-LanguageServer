{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "strict": true,
    "outDir": "dest",
    "rootDir": "src",
    "incremental": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src", "tsconfig.paths.json"],
  "exclude": ["node_modules", ".vscode-test"]
}
